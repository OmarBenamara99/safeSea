<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverMapActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/button_bg"
        android:translationX="5dp"
        android:translationY="8dp"
        android:id="@+id/logout"
        android:text="Se déconnecter"/>


    <fragment

        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/customerInfo"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="@drawable/edittext_bg"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="40sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de personnes"
                android:textSize="16sp"
                android:textColor="@color/textHeadline"
                android:fontFamily="sans-serif-medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/customernmbr"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type de problème"
                android:textSize="16sp"
                android:textColor="@color/textHeadline"
                android:paddingTop="20sp"
                android:fontFamily="sans-serif-medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/customerprob"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Durée d'endurance (En minutes)"
                android:paddingTop="20sp"
                android:textSize="16sp"
                android:textColor="@color/textHeadline"
                android:fontFamily="sans-serif-medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/customertimee"
                />
        </LinearLayout>
    </LinearLayout>

    <Switch
        android:id="@+id/workingSwitch"
        android:layout_width="101dp"
        android:layout_height="159dp"
        android:text="Travail"
        android:layout_margin="10sp" />





</FrameLayout>